{
  "name": "nativefier",
  "version": "7.7.1",
  "description": "Wrap web apps natively",
  "license": "MIT",
  "author": "Goh Jia Hao",
  "engines": {
    "node": ">= 8.10.0",
    "npm": ">= 5.6.0"
  },
  "keywords": [
    "desktop",
    "electron",
    "app",
    "native",
    "wrapper"
  ],
  "main": "lib/src/main.js",
  "bin": {
    "nativefier": "lib/src/cli.js"
  },
  "homepage": "https://github.com/jiahaog/nativefier",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jiahaog/nativefier.git"
  },
  "bugs": {
    "url": "https://github.com/jiahaog/nativefier/issues"
  },
  "scripts": {
    "build-app-static": "ncp app/src/static/ app/lib/static/",
    "build-app": "cd app && tsc",
    "build-cli": "tsc",
    "build": "npm run clean && npm run build-cli && npm run build-app && npm run build-app-static",
    "changelog": "./docs/generate-changelog",
    "ci": "npm run lint && npm test && npm run test:integration",
    "clean": "rimraf lib/ app/lib/",
    "clean:full": "rimraf lib/ app/lib/ node_modules/ app/node_modules/",
    "compile:watch": "tsc -w --noUnusedLocals false",
    "compile:watch:app": "cd app && tsc -w --noUnusedLocals false",
    "lint:fix": "eslint . --fix",
    "lint:format": "prettier --write 'src/**/*.js' 'app/src/**/*.js'",
    "lint": "eslint . --ext .js,.ts",
    "list-outdated-deps": "npm out; cd app && npm out; true",
    "postinstall": "cd app && npm install",
    "test:integration": "jest --testRegex '.*integration-test.js'",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:withlog": "LOGLEVEL=trace npm run test:unit && LOGLEVEL=trace npm run test:integration",
    "test": "npm run test:unit && npm run test:integration"
  },
  "dependencies": {
    "@types/cheerio": "0.x",
    "@types/electron-packager": "14.x",
    "@types/lodash": "4.x",
    "@types/ncp": "2.x",
    "@types/node": "12.x",
    "@types/page-icon": "0.x",
    "@types/shelljs": "0.x",
    "@types/tmp": "0.x",
    "axios": "0.x",
    "cheerio": "^1.0.0-rc.3",
    "commander": "4.x",
    "electron-packager": "14.x",
    "gitcloud": "0.x",
    "hasbin": "1.x",
    "lodash": "4.x",
    "loglevel": "1.x",
    "ncp": "2.x",
    "page-icon": "0.x",
    "sanitize-filename": "1.x",
    "shelljs": "0.x",
    "source-map-support": "0.x",
    "tmp": "0.x"
  },
  "devDependencies": {
    "@types/jest": "25.x",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "eslint": "6.x",
    "eslint-config-prettier": "6.x",
    "eslint-plugin-prettier": "3.x",
    "jest": "25.x",
    "prettier": "1.x",
    "rimraf": "3.x",
    "typescript": "3.x"
  },
  "jest": {
    "setupFiles": [
      "./lib/src/jestSetupFiles"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/app/src.*",
      "<rootDir>/src.*"
    ]
  }
}
